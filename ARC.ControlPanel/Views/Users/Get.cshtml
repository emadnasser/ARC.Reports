        <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
            @Html.TextBox("txtSystem", "", new { @placeholder = "ID", @class = "col-xs-11 col-sm-11" })
        </div>
        <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
            @Html.TextBox("txtId", "", new { @placeholder = "ID", @class = "col-xs-11 col-sm-11" })
        </div>
        <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
