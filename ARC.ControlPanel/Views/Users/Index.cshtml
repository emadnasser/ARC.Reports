@model ARC.ControlPanel.Models.User

@{
    ViewBag.Title = "Index";
}

@*--------------------------------------------------------------------------------------------*@

<div class="page-header">
    <h1>Find Users</h1>
</div>
<div class="alert alert-info" runat="server">
    Please search on the user and select link.
    <br />
</div>
<div class="hr hr-18 dotted hr-double" runat="server"></div>
<div class="row">
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
        @Html.TextBox("txtId", "", new { @placeholder = "ID", @class = "input-small", @style = "width: 250px;" })
    </div>
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
        @Html.TextBox("txtName", "", new { @placeholder = "Name", @class = "input-small", @style = "width: 250px;" })
    </div>
    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <input type="submit" id="addressSearch" value="Seacrh" onclick="location.href='@Url.Action("Index", "UsersController")'" class="btn btn-purple btn-sm" />
    </div>
</div>
<div class="hr hr-18 dotted hr-double"></div>
<div class="row">
    <div class="col-xs-12 col-sm-12 widget-container-col">
        <div class="widget-box widget-color-default">
            <div class="widget-body">
                <div class="widget-main no-padding">
                    <table class="table table-striped table-bordered">
                        <thead class="thin-border-bottom">
                            <tr>
                                <th>
                                    <i class="ace-icon fa fa-info-circle"></i>
                                    ID
                                </th>
                                <th>
                                    <i class="ace-icon fa fa-user"></i>
                                    Name
                                </th>
                                <th>
                                    <i class="ace-icon fa fa-contao"></i>
                                    Contacts
                                </th>
                                <th>
                                    <i class="ace-icon fa fa-info-circle"></i>
                                    Info
                                </th>
                                <th>
                                    <i>@@</i>
                                    Roles
                                </th>
                                <th class="hidden-480">Status</th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr>
                                <td class="">
                                    @Html.DisplayFor(model => model.UserId)
                                </td>
                                <td class="">
                                    @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)
                                </td>
                                <td>
                                    <a href="#">Email: @Html.DisplayFor(model => model.Email)</a><br />
                                    Ext: @Html.DisplayFor(model => model.Phone)<br />
                                    Mobile: @Html.DisplayFor(model => model.Mobile)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.Department)
                                    @Html.DisplayFor(model => model.JobTitle)
                                </td>
                                <td></td>
                                <td class="hidden-480">
                                    <span class="label label-warning">Pending</span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>