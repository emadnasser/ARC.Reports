@model RichEditPreviewModel

<iframe id="previewFrame" src="@Model.PreviewDocumentAction" class="PreviewBorderedContent" style="width: 100%;
                    height: 400px;"></iframe>

<script type="text/javascript">
    RichEditPreview = {
        basePath: '@Model.PreviewDocumentAction',
        Update: function (param) {
            var iframeElementName = "previewFrame";
            var iframeElement = document.getElementById(iframeElementName);
            if (!iframeElement)
                return;
            var additionalParams = "&" + new Date().valueOf();
            if(param)
                additionalParams = param;
            iframeElement.src = this.basePath + "?" + additionalParams;
        }
    };
</script>