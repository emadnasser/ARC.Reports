@model SourceCodeTreeModel

@Html.DevExpress().TreeList(
    settings => {
        settings.Name = "exampleTreeList";
        settings.Width = Unit.Pixel(240);
        settings.Height = Unit.Pixel(334);
        settings.Columns.Add("name", "File name");
        settings.Settings.ShowColumnHeaders = false;
        settings.SettingsBehavior.AllowFocusedNode = true;
        settings.ControlStyle.Border.BorderWidth = 0;
        settings.SettingsBehavior.AutoExpandAllNodes = true;
        settings.CallbackRouteValues = new { Controller = "Spreadsheet", Action = "ApiExampleTreeListPartial",  };
        settings.ClientSideEvents.FocusedNodeChanged = "OnExampleTreeListFocusedNodeChanged";
    }
).BindToVirtualData(new SourceCodeTreeHelper(Model).VirtualModeCreateChildren, new SourceCodeTreeHelper(Model).VirtualModeNodeCreating).GetHtml()