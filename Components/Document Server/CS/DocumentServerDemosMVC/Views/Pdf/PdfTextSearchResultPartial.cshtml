@Html.DevExpress().PopupControl(settings => {
    settings.Name = "resultWindow";
    settings.HeaderText = "Text search";
    settings.Modal = true;
    settings.PopupHorizontalAlign = PopupHorizontalAlign.WindowCenter;
    settings.PopupVerticalAlign = PopupVerticalAlign.WindowCenter;
    settings.Width = new Unit("600px");
    settings.CallbackRouteValues = new {
        conroller = "Pdf",
        Action = "TextSearchResult"
    };
    settings.ClientSideEvents.BeginCallback = "function(s, e) { e.customArgs['wordCount'] = spinEditWordCount.GetNumber();  e.customArgs['findText'] = textBoxTextToFind.GetText(); }";
    settings.SetContent(() => {
        Html.DevExpress().Memo(memoSettings => {
            memoSettings.Name = "Result";
            memoSettings.Height = new Unit("529px");
            memoSettings.Width = new Unit("100%");
            memoSettings.ReadOnly = true;
            memoSettings.Text = Model.SearchResult;
        }).Render();
    });
}).GetHtml()
