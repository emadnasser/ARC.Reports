                    settings.ControlStyle.HorizontalAlign = HorizontalAlign.Right;
                    settings.Properties.ClientSideEvents.NumberChanged = String.Format("function(s,e) {{ SubmitConversionTemperatureAndPressure('{0}'); }}", TemperatureAndPressureEditorId.Celsius);
