@model UnitConversionTemperatureAndPressureModel
<script type="text/javascript">
    // <![CDATA[
    function SubmitConversionTemperatureAndPressure(activeEditorId) {
        if (document.unitConversionLock)
            return;
        $('#TPTemperatureAndPressureContainer>#TemperatureAndPressureEditorId').val(activeEditorId);
        $('#TPTemperatureAndPressureContainer>#submitButton').trigger('submit');
    }
    // ]]>
</script>

@Html.HiddenFor(model => model.TemperatureAndPressureEditorId, new { id = "TemperatureAndPressureEditorId" })
@Html.DevExpress().Label(
                settings => {
                    settings.Name = "ASPxLabel18";
                    settings.Text = "TEMPERATURE AND PRESSURE";
                    settings.ControlStyle.Font.Size = FontUnit.Parse("30px");
                }).GetHtml()
