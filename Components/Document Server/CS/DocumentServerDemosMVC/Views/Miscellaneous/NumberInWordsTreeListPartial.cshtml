@model MiscellaneousNumberInWordsModel

@Html.DevExpress().TreeList(
    settings => {
        settings.Name = "tlResult";
        settings.AutoGenerateColumns = false;
        settings.Width = Unit.Percentage(100);
        settings.SettingsBehavior.AutoExpandAllNodes = true;
        settings.CallbackRouteValues = new { Controller = "Miscellaneous", Action = "NumberInWordsTreeListPartial"};
        
        TreeListTextColumn tlcCulture = new TreeListTextColumn();
        tlcCulture.Name = "tlcCulture";
        tlcCulture.ReadOnly = true;
        tlcCulture.Caption = "Culture";
        tlcCulture.ShowInCustomizationForm = true;
        tlcCulture.VisibleIndex = 0;
        tlcCulture.Width = Unit.Pixel(150);
        tlcCulture.FieldName = "Name";
        settings.Columns.Add(tlcCulture);

        TreeListTextColumn tlcValue = new TreeListTextColumn();
        tlcValue.Name = "tlcValue";
        tlcValue.ReadOnly = true;
        tlcValue.Caption = "Value";
        tlcValue.ShowInCustomizationForm = true;
        tlcValue.VisibleIndex = 1;
        tlcValue.FieldName = "Value";
        settings.Columns.Add(tlcValue);
        
    }).BindToVirtualData(new NumberInWordsTreeHelper(Model).VirtualModeCreateChildren, new NumberInWordsTreeHelper(Model).VirtualModeNodeCreating).GetHtml()