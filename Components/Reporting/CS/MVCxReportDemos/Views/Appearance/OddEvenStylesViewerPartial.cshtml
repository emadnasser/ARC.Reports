@using DevExpress.Web.Demos.Code.Designer
@model ReportsDemoModel
@Html.DevExpress().DocumentViewer(
    settings => {
        settings.Name = "DocumentViewer";
        settings.Report = Model.Report;
        settings.Width = 680;
        settings.SettingsSplitter.SidePaneVisible = false;
        settings.CallbackRouteValues = new { Controller = "Appearance", Action = "OddEvenStylesViewerPartial", ReportID = Model.ReportID };
        settings.ExportRouteValues = new { Controller = "Appearance", Action = "DocumentViewerExportTo", ReportID = Model.ReportID };
    }
).GetHtml()
