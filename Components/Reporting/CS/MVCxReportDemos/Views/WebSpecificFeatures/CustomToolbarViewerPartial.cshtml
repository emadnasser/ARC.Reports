@model ReportsDemoModel
@Html.DevExpress().DocumentViewer(
    settings => {
        settings.Name = "DocumentViewer";
        settings.Report = Model.Report;
        settings.ToolbarMode = DevExpress.XtraReports.Web.DocumentViewer.DocumentViewerToolbarMode.ExternalRibbon;
        settings.AssociatedRibbonName = "Ribbon";
        settings.Width = 1100;
        settings.StylesSplitter.SidePaneWidth = 290;
        settings.CallbackRouteValues = new { Controller = "WebSpecificFeatures", Action = "CustomToolbarViewerPartial", ReportID = Model.ReportID };
        settings.ExportRouteValues = new { Controller = "WebSpecificFeatures", Action = "DocumentViewerExportTo", ReportID = Model.ReportID };
    }).GetHtml()
