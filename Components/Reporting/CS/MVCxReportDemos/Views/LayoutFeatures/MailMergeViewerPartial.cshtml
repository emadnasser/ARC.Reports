@using DevExpress.Web.Demos.Code.Designer
@model ReportsDemoModel
@Html.DevExpress().DocumentViewer(
    settings => {
        settings.Name = "DocumentViewer";
        settings.Report = Model.Report;
        settings.Width = 680;
        settings.CallbackRouteValues = new { Controller = "LayoutFeatures", Action = "MailMergeViewerPartial", ReportID = Model.ReportID };
        settings.ExportRouteValues = new { Controller = "LayoutFeatures", Action = "DocumentViewerExportTo", ReportID = Model.ReportID };
    }).GetHtml()
