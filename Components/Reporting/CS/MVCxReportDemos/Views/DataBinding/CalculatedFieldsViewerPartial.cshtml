@model ReportsDemoModel
@using DevExpress.XtraReports.Web;
@Html.DevExpress().DocumentViewer(
    settings => {
        settings.Name = "DocumentViewer";
        settings.Report = Model.Report;
        settings.CallbackRouteValues = new { Controller = "DataBinding", Action = "CalculatedFieldsViewerPartial", ReportID = Model.ReportID };
        settings.ExportRouteValues = new { Controller = "DataBinding", Action = "DocumentViewerExportTo", ReportID = Model.ReportID };
        var exportFormatItem = (ReportToolbarComboBox)settings.ToolbarItems.First(x => x.ItemKind == ReportToolbarItemKind.SaveFormat);
        exportFormatItem.Elements.RemoveAll(x => x.Value == "png");
    }).GetHtml()
