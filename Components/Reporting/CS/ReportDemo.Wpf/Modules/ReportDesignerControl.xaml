<UserControl
    x:Class="ReportWpfDemo.ReportDesignerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    mc:Ignorable="d"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignWidth="800" d:DesignHeight="400"
    xmlns:dxrud="http://schemas.devexpress.com/winfx/2008/xaml/reports/userdesigner"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:local="clr-namespace:ReportWpfDemo">
    <dxrud:ReportDesigner DocumentSource="{Binding Report, Mode=OneTime}">
        <dxmvvm:Interaction.Behaviors>
            <dxmvvm:EventToCommand EventName="DocumentSaved" Command="{Binding ReportSavedCommand}" />
        </dxmvvm:Interaction.Behaviors>
    </dxrud:ReportDesigner>
</UserControl>