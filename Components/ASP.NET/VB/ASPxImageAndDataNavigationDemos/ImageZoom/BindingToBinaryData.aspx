<%@ Page Language="vb" MasterPageFile="~/Site.master" AutoEventWireup="true" CodeFile="BindingToBinaryData.aspx.vb" Inherits="ImageZoom_BindingToBinaryData" %>
<asp:Content ID="Content1" ContentPlaceHolderID="ContentHolder" runat="Server">
	<dx:ASPxVerticalGrid runat="server" ID="VerticalGrid" Width="1" EnableRecordsCache="false" SettingsSearchPanel-Visible="true" Styles-Record-HorizontalAlign="left">
		<Rows>
			<dx:VerticalGridDataRow FieldName="PhotoUrl" Caption="Photo" RecordStyle-HorizontalAlign="Center">
				<DataItemTemplate>
					<dx:ASPxImageZoom runat="server" ID="zoom" LargeImageLoadMode="OnPageLoad" ShowHintText="false"
						ImageContentBytes='<%#CType(Eval("Photo"), Byte())%>' LargeImageContentBytes='<%#CType(Eval("LargePhoto"), Byte())%>'
						ExpandWindowText='<%#: String.Format("{0} {1}: {2:c}", Eval("Brand"), Eval("Model"), Eval("Price"))%>'>
						<SettingsAutoGeneratedImages ImageCacheFolder="~/Thumb/" ImageWidth="200" ImageHeight="200" LargeImageWidth="600" LargeImageHeight="600" />
						<SettingsZoomMode ZoomWindowWidth="350" ZoomWindowHeight="350" ZoomWindowPosition="Bottom" />
						<Border BorderStyle="None" />
					</dx:ASPxImageZoom>
				</DataItemTemplate>
			</dx:VerticalGridDataRow>
			<dx:VerticalGridDataRow FieldName="Brand" />
			<dx:VerticalGridDataRow FieldName="Model" />
			<dx:VerticalGridTextRow FieldName="Price">
				<PropertiesTextEdit DisplayFormatString="c" />
			</dx:VerticalGridTextRow>
			<dx:VerticalGridDataRow FieldName="Rating">
				<DataItemTemplate>
					<dx:ASPxRatingControl runat="server" Value="<%#Convert.ToDecimal(Container.Text)%>" ReadOnly="true" />
				</DataItemTemplate>
			</dx:VerticalGridDataRow>
			<dx:VerticalGridHyperLinkRow FieldName="ReviewCount" Caption="Reviews">
				<PropertiesHyperLinkEdit NavigateUrlFormatString="javascript:void(0)" DisplayFormatString="{0} reviews" />
			</dx:VerticalGridHyperLinkRow>
		</Rows>
		<SettingsPager Mode="ShowPager" PageSize="4" />
		<Settings HeaderAreaWidth="150" RecordWidth="200" />
	</dx:ASPxVerticalGrid>
	<ef:EntityDataSource ID="ImagesDataSource" runat="server" ContextTypeName="BinaryImagesContext" EntitySetName="BinaryImages" />
</asp:Content>