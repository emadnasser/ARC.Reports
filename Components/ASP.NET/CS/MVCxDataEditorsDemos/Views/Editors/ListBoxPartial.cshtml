@Html.DevExpress().ListBox(
    settings => {
        settings.Name = "lbModels";
        settings.CallbackRouteValues = new { Controller = "Editors", Action = "ListBoxPartial" };
        settings.Width = 300;
        settings.Height = 210;
        settings.Properties.Caption = "Accepted models:";
        settings.Properties.CaptionSettings.Position = EditorCaptionPosition.Top;
        settings.Properties.EnableClientSideAPI = true;
        settings.Properties.SelectionMode = ListBoxDemoHelper.SelectionMode;
        settings.Properties.ValueField = "ID";
        settings.Properties.ValueType = typeof(string);
        settings.Properties.Columns.Add("Name", "Model").Width = Unit.Percentage(100);
        settings.Properties.Columns.Add("Price").Width = 50;
    }
).BindList(Model).GetHtml()