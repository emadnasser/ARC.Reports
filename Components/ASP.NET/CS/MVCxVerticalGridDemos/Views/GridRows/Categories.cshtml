@model IEnumerable
           

@functions{
    IEnumerable GetScrollBarModeTypes() {
        return Enum.GetValues(typeof(ScrollBarMode)); 
    }
}

<script type="text/javascript">
    function Submit(s, e) {
        $("form").submit();
    }
</script>

@using(Html.BeginForm()) {
    
    @Html.DevExpress().CheckBox(settings => {
        settings.Name = "EnableRowExpandingAnimation";
        settings.Text = "Enable row expanding animation";
        settings.Properties.ClientSideEvents.CheckedChanged = "Submit";
    }).Bind(CategoriesDemoHelper.Options.EnableRowExpandingAnimation).GetHtml()

    @Html.DevExpress().CheckBox(settings => {
        settings.Name = "AllowRowExpanding";
        settings.Text = "Allow expanding";
        settings.Properties.ClientSideEvents.CheckedChanged = "Submit";
    }).Bind(CategoriesDemoHelper.Options.AllowRowExpanding).GetHtml()

    @Html.DevExpress().CheckBox(settings => {
        settings.Name = "ShowCategoryIndents";
        settings.Text = "Show category indents";
        settings.Properties.ClientSideEvents.CheckedChanged = "Submit";
    }).Bind(CategoriesDemoHelper.Options.ShowCategoryIndents).GetHtml()

    @Html.DevExpress().CheckBox(settings => {
        settings.Name = "EnableCallbackMode";
        settings.Text = "Enable callback mode";
        settings.Properties.ClientSideEvents.CheckedChanged = "Submit";
    }).Bind(CategoriesDemoHelper.Options.EnableCallbackMode).GetHtml()

    <br />
    @Html.Partial("CategoriesPartial", Model)
}



