@model IEnumerable
           

<script type="text/javascript">
    function ApplyDemoOptions() {
        $("form").submit();
    }
</script>

@using(Html.BeginForm()) {
    
    @Html.DevExpress().CheckBox(settings => {
        settings.Name = "EnableFixedRows";
        settings.Text = "Enable Fixed Rows";
        settings.Properties.ClientSideEvents.CheckedChanged = "ApplyDemoOptions";
    }).Bind(FixedRowsDemoHelper.Options.EnableFixedRows).GetHtml()

    @Html.DevExpress().CheckBox(settings => {
        settings.Name = "EnableVerticalScrolling";
        settings.Text = "Enable Vertical Scrolling";
        settings.Properties.ClientSideEvents.CheckedChanged = "ApplyDemoOptions";
    }).Bind(FixedRowsDemoHelper.Options.EnableVerticalScrolling).GetHtml()

    <br />
    @Html.Partial("FixedRowsPartial", Model)
}



