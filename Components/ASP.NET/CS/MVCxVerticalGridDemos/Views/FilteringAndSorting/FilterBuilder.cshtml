@model IEnumerable
           
<script type="text/javascript">
    function Submit(s, e) {
        $("form").submit();
    }
</script>

@using(Html.BeginForm()) {
    @Html.DevExpress().CheckBox(settings => {
        settings.Name = "EnableTextTab";
        settings.Text = "Enable text tab";
        settings.Checked = FilterBuilderDemoHelper.Options.EnableTextTab;
        settings.Properties.ClientSideEvents.CheckedChanged = "Submit";
    }).GetHtml();
                
    @Html.DevExpress().CheckBox(settings => {
        settings.Name = "AllowHierarchicalColumns";
        settings.Text = "Allow hierarchical columns";
        settings.Checked = FilterBuilderDemoHelper.Options.AllowHierarchicalColumns;
        settings.Properties.ClientSideEvents.CheckedChanged = "Submit";
    }).GetHtml();
                
    @Html.DevExpress().CheckBox(settings => {
        settings.Name = "ShowAllDataSourceColumns";
        settings.Text = "Show all datasource columns";
        settings.Checked = FilterBuilderDemoHelper.Options.ShowAllDataSourceColumns;
        settings.Properties.ClientSideEvents.CheckedChanged = "Submit";
    }).GetHtml();
    <br />
    @Html.Partial("FilterBuilderPartial", Model)
}


