@Html.DevExpress().TreeList(settings =>
{
    settings.Name = "treeList";
    settings.CallbackRouteValues = new { Controller = "Shaping", Action = "ColumnResizingPartial" };
    settings.ParentFieldName = "ParentID";
    settings.Width = 700;

    settings.SettingsResizing.ColumnResizeMode = ColumnResizingDemoHelper.Options.ColumnResizeMode;
    settings.SettingsResizing.Visualization = ColumnResizingDemoHelper.Options.Visualization;
    
    settings.Columns.Add(col =>
    {
        col.FieldName = "Name";
        col.Caption = "Departments";
    });
    settings.Columns.Add(col =>
    {
        col.FieldName = "Budget";
        col.PropertiesEdit.DisplayFormatString = "{0:C}";
    });
    settings.Columns.Add("Location");
    settings.Columns.Add("Phone1");
    settings.Columns.Add("Phone2");
    settings.SettingsBehavior.AllowEllipsisInText = true;
    settings.SettingsBehavior.AutoExpandAllNodes = true;
}).Bind(Model).GetHtml()