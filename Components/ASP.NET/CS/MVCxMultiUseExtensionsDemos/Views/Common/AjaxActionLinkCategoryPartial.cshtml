@Html.DevExpress().FormLayout(settings => {
    settings.Name = "categoryInfo";
    settings.ColCount = 2;
    settings.ControlStyle.CssClass = "category";
    settings.Styles.LayoutGroupBox.CssClass = "group";
    settings.Styles.LayoutGroup.Cell.CssClass = "itemGroupCell";
    
    settings.Items.Add(i => {
        i.FieldName = "Photo";
        i.ShowCaption = DefaultBoolean.False;
        i.NestedExtensionType = FormLayoutNestedExtensionItemType.BinaryImage;
        i.NestedExtensionSettings.Width = 160;
        i.NestedExtensionSettings.Height = 130;
    });
    settings.Items.AddGroupItem(g => {
        g.ShowCaption = DefaultBoolean.False;
        g.VerticalAlign = FormLayoutVerticalAlign.Top;
        g.Items.Add(i => {
            i.FieldName = "CategoryName";
            i.Caption = "Category name:";
            i.NestedExtensionType = FormLayoutNestedExtensionItemType.Label;
            i.NestedExtensionSettings.Width = Unit.Percentage(100);
        });
        g.Items.Add(i => {
            i.FieldName = "Description";
            i.Caption = "Description:";
            i.NestedExtensionType = FormLayoutNestedExtensionItemType.Label;
            i.NestedExtensionSettings.Width = Unit.Percentage(100);
        });
    });
}).Bind(Model).GetHtml()