@Html.DevExpress().FileManager(
    settings => {
        settings.Name = "fileManager";
        settings.CallbackRouteValues = new { Controller = "FileManager", Action = "MultipleFilesSelectionPartial" };
        settings.DownloadRouteValues = new { Controller = "FileManager", Action = "DownloadImages" };
        settings.Width = Unit.Percentage(100);

        settings.Settings.InitialFolder = "Product icons";
        settings.Settings.ThumbnailFolder = Url.Content("~/Content/FileManager/Thumbnails");
        settings.Settings.EnableMultiSelect = true;

        settings.SettingsFileList.View = (FileListView)Session["FileListViewMode"];

        settings.SettingsUpload.Enabled = false;
        settings.SettingsEditing.AllowDownload = true;
        settings.Styles.FolderContainer.Width = Unit.Percentage(30);

        settings.ClientSideEvents.SelectionChanged = "OnSelectionChanged";
    }
).BindToFolder(Model).GetHtml()