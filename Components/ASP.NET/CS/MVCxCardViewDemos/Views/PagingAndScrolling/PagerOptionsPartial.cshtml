@model PagerDemoOptions
      
@using(Html.BeginForm()){
    @Html.DevExpress().FormLayout(
        settings => {
            settings.Name = "demoOptions";
            settings.RequiredMarkDisplayMode = RequiredMarkMode.None;
            settings.UseDefaultPaddings = false;
            settings.Style["padding"] = "0px 0px 10px 0px";
            
            settings.Items.AddGroupItem(g => {
                g.ColCount = 2;
                g.ShowCaption = DefaultBoolean.False;
                g.GroupBoxStyle.Border.BorderStyle = BorderStyle.None;
                g.GroupBoxStyle.BorderBottom.BorderStyle = BorderStyle.Solid;
                g.UseDefaultPaddings = false;

                g.Items.Add(i => i.Position, PrepareComboBoxWidth);
                g.Items.Add(i => i.ShowDisabledButtons, PrepareItemAlign);
                g.Items.Add(i => i.PageSizeItemPosition, PrepareComboBoxWidth);
                g.Items.Add(i => i.ShowNumericButtons, PrepareItemAlign);
                g.Items.Add(i => i.ShowPageSizeItem);
                g.Items.Add(i => i.ShowSeparators);
                g.Items.Add(i => i.ShowSummary);
            });
            settings.Items.AddGroupItem(g => {
                g.ShowCaption = DefaultBoolean.False;
                g.GroupBoxDecoration = GroupBoxDecoration.None;
                g.UseDefaultPaddings = false;
                g.Paddings.PaddingTop = Unit.Pixel(6);
                g.Paddings.PaddingRight = Unit.Pixel(6);
                
                g.Items.Add(i => {
                    i.ShowCaption = DefaultBoolean.False;
                    i.HorizontalAlign = FormLayoutHorizontalAlign.Right;
                    i.NestedExtension().Button(s => {
                        s.Name = "Apply";
                        s.Text = "Apply";
                        s.UseSubmitBehavior = true;
                    });
                });
            });
        }).GetHtml()
}
@functions{
    protected void PrepareItemAlign(MVCxFormLayoutItem item) {
        item.HorizontalAlign = FormLayoutHorizontalAlign.Right;
    }
    protected void PrepareComboBoxWidth(MVCxFormLayoutItem item) {
        item.NestedExtensionSettings.Width = Unit.Pixel(110);
    }
}