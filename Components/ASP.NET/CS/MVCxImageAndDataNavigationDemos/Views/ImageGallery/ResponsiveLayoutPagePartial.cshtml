@Html.DevExpress().ImageGallery(
    settings => {
        settings.Name = "imageGallery";
        settings.CallbackRouteValues = new { Controller = "ImageGallery", Action = "ResponsiveLayoutPagePartial" };
        settings.Layout = DevExpress.Web.Layout.Flow;
        settings.EnableTheming = false;
        settings.ThumbnailHeight = 138;
        settings.ThumbnailWidth = 138;

        settings.ImageUrlField = "ImageUrl";
        settings.FullscreenViewerTextField = "Text";
        settings.FullscreenViewerThumbnailUrlField = "ThumbnailUrl";
        settings.ThumbnailUrlField = "MediumImageUrl";
        settings.TextVisibility = ElementVisibilityMode.None;

        settings.SettingsFullscreenViewer.ImageLoadMode = ImageLoadMode.DynamicLoad;
        settings.SettingsFlowLayout.ItemsPerPage = 30;
        settings.PagerSettings.EndlessPagingMode = DataViewEndlessPagingMode.OnScroll;

        settings.ControlStyle.Paddings.Padding = 0;
    }
).BindToXML(Server.MapPath("~/App_Data/cities.xml"), "//items/*").GetHtml()