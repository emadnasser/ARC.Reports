@Html.DevExpress().HtmlEditor(
    settings => {
        settings.Name = "heCustomCss";
        settings.CallbackRouteValues = new { Controller = "ToolbarItems", Action = "CustomCssPartial" };
        settings.Width = Unit.Percentage(100);
        settings.Height = Unit.Pixel(460);

        string htmlContentPath = HttpContext.Current.Server.MapPath("~/Content/HtmlEditor/DemoHtml/CustomCss.htm");
        settings.Html = System.IO.File.ReadAllText(htmlContentPath);
        settings.CssFiles.Add("~/Content/HtmlEditor/DemoCss/CustomCss.css");

        settings.SettingsDialogs.InsertImageDialog.SettingsImageUpload.FileSystemSettings.Assign(HtmlEditorToolbarItemsDemosHelper.FileSaveSettings.FileSystemSettings);
        settings.SettingsDialogs.InsertImageDialog.SettingsImageUpload.ValidationSettings.Assign(HtmlEditorToolbarItemsDemosHelper.ImageUploadValidationSettings);

        settings.SettingsDialogs.InsertImageDialog.CssClassItems.Add(new InsertImageCssClassItem() { Text = "With border", CssClass = "WithBorder" });
        settings.SettingsDialogs.InsertImageDialog.CssClassItems.Add(new InsertImageCssClassItem() { Text = "With paddings", CssClass = "WithPaddings" });
        settings.SettingsDialogs.InsertImageDialog.CssClassItems.Add(new InsertImageCssClassItem() { Text = "Semi-transparent", CssClass = "SemiTransparent" });

        settings.SettingsDialogs.InsertImageDialog.ShowStyleSettingsSection = true;
            
        settings.Toolbars.CreateDefaultToolbars();
        settings.Toolbars[1].Items.RemoveAll(item => item.GetType() == typeof(ToolbarParagraphFormattingEdit));

        settings.Toolbars[1].Items.Add<ToolbarCustomCssEdit>(edit => {
            edit.Items.Add("Clear Style", "", "", "");
            edit.Items.Add("Title", "H1", "CommonTitle", "CommonTitlePreview");
            edit.Items.Add("Header1", "H3", "CommonHeader1", "CommonHeader1Preview");
            edit.Items.Add("Header2", "H4", "CommonHeader2", "CommonHeader2Preview");
            edit.Items.Add("Content", "Div", "CommonContent", "CommonContentPreview");
            edit.Items.Add("Features", "Strong", "CommonFeatures", "CommonFeaturesPreview");
            edit.Items.Add("Footer", "Div", "CommonFooter", "CommonFooterPreview");
            edit.Items.Add("Link", "", "Link", "LinkPreview"); 
            edit.Items.Add("ImageTitle", "EM", "ImageTitle", "ImageTitlePreview");
            edit.Items.Add("ImageMargin", "", "ImageMargin", "ImageMarginPreview");
            edit.Items.Add("ImageWithBorder", "", "WithBorder", "ImageWithBorderPreview");
            edit.Items.Add("ImageWithPaddings", "", "WithPaddings", "ImageWithPaddingsPreview");
            edit.Items.Add("ImageSemiTransparent", "", "SemiTransparent", "ImageSemiTransparentPreview");

            edit.Width = 120;
            edit.VisibleIndex = 0;
        });
    }).GetHtml()