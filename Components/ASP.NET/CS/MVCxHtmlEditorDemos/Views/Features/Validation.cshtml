@model ValidationDemoModel

<script type="text/javascript">
    function ValidationHandler(s, e) {
        if(e.html.length > '@(ValidationDemoModel.MaxLength)') {
            e.isValid = false;
            e.errorText = "@(new MvcHtmlString(ValidationDemoModel.ErrorMessage))";    
        }
    }
    function HtmlChangedHandler(s, e) {
        $("#contentLength").html(s.GetHtml().length);
    }
</script>
@using (Html.BeginForm()) {
    @Html.Partial("ValidationPartial", Model)
    <div style="margin: 8px 0;">            
        Length of HTML code representing the Editor's content (in characters): <b id="contentLength">@(Model.DemoHtml.Length)</b>
    </div>
    <br />
    @Html.DevExpress().Button(
        settings => {
            settings.Name = "btnSubmit";
            settings.Text = "Submit";
            settings.UseSubmitBehavior = true;
        }
    ).GetHtml()
}
