@model HtmlEditorFeaturesDemoOptions

@Html.DevExpress().FormLayout(settings => {
    settings.Name = "demoOptions";
    settings.Width = Unit.Pixel(200);
    settings.ShowItemCaptionColon = false;
    settings.RequiredMarkDisplayMode = RequiredMarkMode.None;
    settings.ColCount = 3;
    settings.SettingsItemCaptions.Location = LayoutItemCaptionLocation.Left;
    
    settings.Items.AddGroupItem(g => {
        g.Caption = "Content Filtering";
        g.GroupBoxDecoration = GroupBoxDecoration.HeadingLine;
        g.ParentContainerStyle.Paddings.PaddingRight = Unit.Pixel(20);
        g.ColCount = 2;
        
        g.Items.Add(m => m.AllowScripts);
        g.Items.Add(m => m.AllowIFrames);
        g.Items.Add(m => m.AllowFormElements);
        g.Items.Add(m => m.AllowIdAttributes);
        g.Items.Add(m => m.AllowedDocumentType, i => i.NestedExtensionSettings.Width = Unit.Pixel(70));
    });
    
    settings.Items.AddGroupItem(g => {
        g.Caption = "Content Editing";
        g.GroupBoxDecoration = GroupBoxDecoration.HeadingLine;
        g.ColCount = 2;

        g.Items.Add(m => m.UpdateBoldItalic);
        g.Items.Add(m => m.ResourcePathMode, i => i.NestedExtensionSettings.Width = Unit.Pixel(70));
        g.Items.Add(m => m.UpdateDeprecatedElements);
        g.Items.Add(m => m.AllowCustomColorsInColorPickers);
        g.Items.Add(m => m.EnterMode, i => i.NestedExtensionSettings.Width = Unit.Pixel(70));
        g.Items.Add(m => m.AllowEditFullDocument);
    });
    
    settings.Items.Add(i => {
        i.ShowCaption = DefaultBoolean.False;
        i.NestedExtensionType = FormLayoutNestedExtensionItemType.Button;
        i.ParentContainerStyle.Paddings.PaddingLeft = Unit.Pixel(30);
        i.ParentContainerStyle.Paddings.PaddingTop = Unit.Pixel(20);
        i.VerticalAlign = FormLayoutVerticalAlign.Top;
        i.NestedExtension().Button(s => {
            s.Name = "apply";
            s.Text = "Apply";
            s.UseSubmitBehavior = true;
            s.Width = 80;
        });
    });
}).Bind(Model).GetHtml()