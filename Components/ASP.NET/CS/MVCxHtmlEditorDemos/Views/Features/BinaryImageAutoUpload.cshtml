@model HtmlEditorBinaryImageAutoUploadOptions
@section AdditionalResources {
    <script type="text/javascript">
        function onBeginCallback(s, e) {
            e.customArgs["MaxHeight"] = MaxHeight.GetNumber();
            e.customArgs["MaxWidth"] = MaxWidth.GetNumber();
        }
    </script>
}
@using(Html.BeginForm()) {
    if(Model.IsAzureAccessKeyDefined) {
        Html.DevExpress().FormLayout((settings) => {
            settings.Name = "formLayout";
            settings.ColCount = 2;
            settings.SettingsItems.ShowCaption = DefaultBoolean.False;
            settings.RequiredMarkDisplayMode = RequiredMarkMode.None;

            settings.Items.Add().SetNestedContent(() => Html.RenderPartial("BinaryImageAutoUploadPartial", Model));
            settings.Items.AddGroupItem((group) => {
                group.GroupBoxDecoration = GroupBoxDecoration.None;
                group.SettingsItemCaptions.Location = LayoutItemCaptionLocation.Top;

                group.Items.Add(m => m.AllowSaveBinaryImageToServer).NestedExtension().CheckBox((cbSettings) => {
                    cbSettings.Text = "AllowSaveBinaryImageToServer";
                });
                group.Items.Add(m => m.MaxWidth).ShowCaption = DefaultBoolean.True;
                group.Items.Add(m => m.MaxHeight).ShowCaption = DefaultBoolean.True;
            });
        }).Render();
    } else {
        Html.RenderPartial("BinaryImageAutoUploadWarning");
    }
}