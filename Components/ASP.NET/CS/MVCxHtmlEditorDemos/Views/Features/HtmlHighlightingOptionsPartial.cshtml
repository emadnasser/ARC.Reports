@model HtmlEditorHtmlHighlightingDemoOptions

@Html.DevExpress().FormLayout(settings => {
    settings.Name = "demoOptions";
    settings.Width = Unit.Pixel(200);
    settings.ShowItemCaptionColon = false;
    settings.RequiredMarkDisplayMode = RequiredMarkMode.None;
    settings.SettingsItemCaptions.Location = LayoutItemCaptionLocation.Right;
    
    var g = settings.Items.AddGroupItem(itemSettings => {
        itemSettings.Caption = "HtmlView Settings";
        itemSettings.GroupBoxDecoration = GroupBoxDecoration.HeadingLine;
    });

    g.Items.Add(m => m.EnableAutoCompletion);
    g.Items.Add(m => m.EnableTagAutoClosing);
    g.Items.Add(m => m.HighlightActiveLine);
    g.Items.Add(m => m.HighlightMatchingTags);
    g.Items.Add(m => m.ShowCollapseTagButtons);
    g.Items.Add(m => m.ShowLineNumbers);
    g.Items.Add(m => m.Mode, i => i.NestedExtensionSettings.Width = Unit.Pixel(80));

    g.Items.Add(itemSettigns => {
        itemSettigns.ShowCaption = DefaultBoolean.False;
        itemSettigns.NestedExtensionType = FormLayoutNestedExtensionItemType.Button;
        itemSettigns.Paddings.PaddingTop = Unit.Pixel(20);
        var btnSettigns = (ButtonSettings)itemSettigns.NestedExtensionSettings;
        btnSettigns.Width = 80;
        btnSettigns.Theme = "Metropolis";
        btnSettigns.Name = "apply";
        btnSettigns.Text = "Apply";
        btnSettigns.UseSubmitBehavior = true;
    });
}).Bind(Model).GetHtml()
