@Html.DevExpress().Spreadsheet(
    settings => {
        settings.Name = "spreadsheet";
        settings.CallbackRouteValues = new { Controller = "Features", Action = "ChartsPartial" };
        settings.Width = Unit.Percentage(100);
        settings.Height = 700;
        settings.ShowConfirmOnLosingChanges = false;
        settings.PreRender = (s, e) => {
            MVCxSpreadsheet spreadsheet = (MVCxSpreadsheet)s;
            SpreadsheetDemoUtils.HideFileTab(spreadsheet);
        };
}).Open(Path.Combine(DirectoryManagmentUtils.CurrentDataDirectory, "InvestmentPortfolio.xlsx")).GetHtml()