@Html.DevExpress().RichEdit(settings => {
    settings.Name = "RichEdit";
    settings.CallbackRouteValues = new { Controller = "DocumentManagement", Action = "LoadAndSavePartial" };
    settings.CustomActionRouteValues = new { Controller = "DocumentManagement", Action = "ExportFile" };

    settings.Width = Unit.Percentage(100);
    
    settings.ShowConfirmOnLosingChanges = false;
    settings.ActiveTabIndex = 0;
    
    settings.PreRender = (s, e) => {
        MVCxRichEdit richEdit = (MVCxRichEdit)s;
        RichEditDemoUtils.HideFileTab(richEdit);
        richEdit.Focus();
    };
}).Open(Path.Combine(DirectoryManagmentUtils.CurrentDataDirectory, "pdfExample.docx")).GetHtml()