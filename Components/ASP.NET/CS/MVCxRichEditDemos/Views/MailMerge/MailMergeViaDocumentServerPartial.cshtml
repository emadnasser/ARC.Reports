@Html.DevExpress().RichEdit(settings => {
    settings.Name = "RichEdit";
    settings.CallbackRouteValues = new { Controller = "MailMerge", Action = "MailMergeViaDocumentServerPartial" };
    settings.CustomActionRouteValues = new { Controller = "MailMerge", Action = "OpenMergedFile" };
    
    settings.Width = Unit.Percentage(100);
    settings.Height = Unit.Pixel(500);
    settings.ShowConfirmOnLosingChanges = false;
    settings.ReadOnly = true;
    settings.RibbonMode = RichEditRibbonMode.None;
    settings.ShowStatusBar = false;
    settings.Settings.HorizontalRuler.Visibility = RichEditRulerVisibility.Hidden;

    settings.ClientSideEvents.Init = "OnRichEditInit";
}).GetHtml()
