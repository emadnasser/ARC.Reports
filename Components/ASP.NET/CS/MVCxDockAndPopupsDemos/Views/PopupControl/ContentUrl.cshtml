<div style="width: 100%; height: 215px; padding-top: 100px" id="popupArea">
    <div style="text-align: center">
        <img src="@Url.Content("~/Content/PopupControl/ContentUrl/mail32x32.gif")"
            style="height: 32px; width: 32px; background-color: transparent; cursor: pointer" alt="" />
        <br />
        Click here to send us a message...
    </div>
    @Html.DevExpress().PopupControl(
        settings => {
            settings.Name = "feedPopupControl";
            settings.PopupElementID = "popupArea";
            settings.ContentUrl = "ContentUrlFeedForm";
            settings.HeaderText = "Feedback form";
            settings.FooterText = "Try to resize the control using the resize grip or the control's edges";
            
            settings.AllowDragging = true;
            settings.AllowResize = true;
            settings.ShowFooter = true;
            settings.ShowOnPageLoad = true;  
            settings.CloseAction = CloseAction.CloseButton;
            
            settings.PopupHorizontalAlign = PopupHorizontalAlign.Center;
            settings.PopupVerticalAlign = PopupVerticalAlign.Middle;
            settings.Styles.Footer.Paddings.Padding = 8;
            settings.Styles.Footer.SizeGripSpacing = 0;

            settings.Height = 300;
            settings.Width = 400;
        }
    ).GetHtml()
</div>
