@Html.DevExpress().Chart(settings => {
    settings.Name = "chart";
    settings.Width = 920;
    settings.Height = 500;
    settings.BorderOptions.Visibility = DefaultBoolean.False;
    settings.EnableClientSideAPI = true;
    settings.CallbackRouteValues = new { Controller = "Miscellaneous", Action = "PrintingAndExportingPartial" };

    settings.Legends.Default(l => { 
        l.AlignmentHorizontal = LegendAlignmentHorizontal.Left; 
    });

    settings.Titles.Add(new ChartTitle() {
        Text = "Microsoft Corp. Annual Revenue",
        Font = new Font("Tahoma", 18)
    });
    settings.Titles.Add(new ChartTitle() {
        Text = "From www.microsoft.com",
        TextColor = Color.Gray,
        Font = new Font("Tahoma", 8),
        Alignment = StringAlignment.Far,
        Dock = ChartTitleDockStyle.Bottom
    });

    settings.Series.Add(s => { 
        s.Name = "Annual";
        s.SetDataMembers("Year", "AnnualRevenue");
    });
    settings.Series.Add(s => { 
        s.Name = "Summary";
        s.SetDataMembers("Year", "SummaryRevenue");
        s.Views().LineSeriesView(v => {
            v.SeriesLabel(l => {
                l.ResolveOverlappingMode = ResolveOverlappingMode.Default;
            });
            v.LineMarkerOptions.Size = 20;
        });
    });

    settings.XYDiagram(d => {
        d.AxisY.Title.Text = "Millions of Dollars";
        d.AxisY.Title.Visibility = DefaultBoolean.True;
        d.AxisY.GridLines.MinorVisible = true;
    });
}).Bind(Model).GetHtml()