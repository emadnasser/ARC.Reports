@model IList

@using (Html.BeginForm()) {
    ChartBar3DDemoOptions options = (ChartBar3DDemoOptions)ViewData[ChartDemoHelper.OptionsKey];
    
    <div class="chartOptionsPanel" style="height:auto; font-size:12px">
        <table style="width: 100%;">
            <tr>
                <td>
                    @Html.CheckBox("showFacet", options.ShowFacet)
                </td>
                <td class="NoWrap">
                    <label for="showFacet" style="width:auto">Show Facet</label>
                </td>
                <td><div class="Spacer" style="width: 30px;"></div></td>
                <td class="NoWrap"><label>Bar 3D Model</label></td>
                <td><div class="Spacer" style="width: 5px;"></div></td>
                <td>
                    @Html.DropDownList("bar3DModelString", ChartDemoHelper.GetBar3DModel())
                </td>
                <td><div class="Spacer" style="width: 10px;"></div></td>
                <td class="NoWrap"><label>Transparency</label></td>
                <td><div class="Spacer" style="width: 5px;"></div></td>
                <td>
                    @Html.DropDownList("transparency", ChartDemoHelper.GetTransparency("0"))
                </td>
                <td></td>
            </tr>
            <tr>
                <td><div class="Spacer" style="width: 100%; height: 5px;"></div></td>
            </tr>
            <tr>
                <td>
                    @Html.CheckBox("showLabels", options.ShowLabels)
                </td>
                <td class="NoWrap">
                    <label for="showLabels" style="width:auto">Show Labels</label>
                </td>
                <td><div class="Spacer" style="width: 320px;"></div></td>
                <td class="NoWrap"><label>Perspective Angle</label></td>
                <td><div class="Spacer" style="width: 5px;"></div></td>
                <td>
                    @Html.DropDownList("perspectiveAngle", ChartDemoHelper.GetPerspectiveAngle())
                </td>
                <td><div class="Spacer" style="width: 10px;"></div></td>
                <td class="NoWrap"><label>Zoom Percent</label></td>
                <td><div class="Spacer" style="width: 5px;"></div></td>
                <td>
                    @Html.DropDownList("zoomPercent", ChartDemoHelper.GetZoomPercent())
                </td>
                <td>
                    <input style="float: right;" type="submit" value="Apply" />
                </td>
            </tr>
        </table>
    </div>

    @Html.DevExpress().Chart(settings => {
        settings.Name = "chart";
        settings.Width = 920;
        settings.Height = 500;
        settings.BorderOptions.Visibility = DefaultBoolean.False;
        settings.CrosshairEnabled = options.ShowLabels ? DefaultBoolean.False : DefaultBoolean.True;
        settings.SeriesSorting = SortingMode.Descending;

        settings.Legends.Default(l => {
            l.AlignmentHorizontal = LegendAlignmentHorizontal.Center;
            l.AlignmentVertical = LegendAlignmentVertical.BottomOutside;
            l.Direction = LegendDirection.LeftToRight;
            l.Border.Visibility = DefaultBoolean.False;
        });    
    
        settings.Series.Template(t => {
            t.Views().ManhattanBarSeriesView(v => {
                v.SeriesLabel(l => {
                    l.ResolveOverlappingMode = ResolveOverlappingMode.Default;
                    l.TextPattern = "{V}";
                });
                v.ShowFacet = options.ShowFacet;
                v.Model = (Bar3DModel)Enum.Parse(typeof(Bar3DModel), options.Bar3DModelString); ;
                v.Transparency = options.Transparency;
            });
            t.SetDataMembers("Region", "Sales");
            t.LabelsVisibility = options.ShowLabels ? DefaultBoolean.True : DefaultBoolean.False;
        });
        
        settings.XYDiagram3D(d => {
            d.AxisY.Interlaced = true;
            d.AxisY.Label.TextPattern = "${V}M";
            d.AxisY.NumericScaleOptions.GridSpacing = 1;
            d.AxisY.NumericScaleOptions.GridAlignment = NumericGridAlignment.Ones;
            d.RotationType = RotationType.UseAngles;
            d.RotationOrder = RotationOrder.XYZ;
            d.PerspectiveAngle = options.PerspectiveAngle;
            d.ZoomPercent = options.ZoomPercent;
            d.VerticalScrollPercent = 4;
        });

        settings.Titles.Add(new ChartTitle() {
            Text = "DevAV Sales by Regions"
        });
    }).Bind(Model, seriesDataMember: "Year").GetHtml()
}
