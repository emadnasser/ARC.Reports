@Html.DevExpress().PivotGrid(
    settings => {
        settings.Name = "pivotGrid";
        settings.CallbackRouteValues = new { Controller = "PagingAndScrolling", Action = "VirtualScrollingPartial" };
        settings.Width = Unit.Percentage(100);
        settings.Height = Unit.Pixel(600);

        settings.OptionsView.VerticalScrollingMode = PivotScrollingMode.Virtual;
        settings.OptionsView.HorizontalScrollingMode = PivotScrollingMode.Virtual;
        settings.OptionsView.VerticalScrollBarMode = ScrollBarMode.Auto;
        settings.OptionsView.HorizontalScrollBarMode = ScrollBarMode.Auto;
        settings.OptionsView.ShowFilterHeaders = false;
        
        settings.OptionsPager.RowsPerPage = 25;
        settings.OptionsPager.ColumnsPerPage = 15;
        settings.OptionsPager.Visible = false;
        settings.OptionsFilter.NativeCheckBoxes = false;
        
        settings.Fields.Add(f => {
            f.ID = "Category";
            f.FieldName = "CategoryName";
            f.Caption = "Category Name";
            f.Area = PivotArea.RowArea;
        });
        settings.Fields.Add(f => {
            f.ID = "Product";
            f.FieldName = "ProductName";
            f.Caption = "Product Name";
            f.Area = PivotArea.RowArea;
        });

        settings.Fields.Add(f =>
        {
            f.ID = "FieldYear";
            f.FieldName = "ShippedDate";
            f.Caption = "Year";
            f.UnboundFieldName = "Year";
            f.GroupInterval = PivotGroupInterval.DateYear;
            f.Area = PivotArea.ColumnArea;
        });
        settings.Fields.Add(f =>
        {
            f.ID = "Quarter";
            f.FieldName = "ShippedDate";
            f.Caption = "Quarter";
            f.UnboundFieldName = "Quarter";
            f.GroupInterval = PivotGroupInterval.DateQuarter;
            f.ValueFormat.FormatString = "Qtr {0}";
            f.ValueFormat.FormatType = FormatType.Numeric;
            f.Area = PivotArea.ColumnArea;
        });
        settings.Fields.Add(f => {
            f.ID = "Month";
            f.FieldName = "ShippedDate";
            f.Caption = "Month";
            f.UnboundFieldName = "Month";
            f.GroupInterval = PivotGroupInterval.DateMonth;
            f.Area = PivotArea.ColumnArea;
        });
        settings.Fields.Add(f => {
            f.ID = "WeekOfMonth";
            f.FieldName = "ShippedDate";
            f.Caption = "Week of Month";
            f.UnboundFieldName = "WeekOfMonth";
            f.GroupInterval = PivotGroupInterval.DateWeekOfMonth;
            f.Area = PivotArea.ColumnArea;
        });
        
        settings.Fields.Add(f => {
            f.ID = "Sales";
            f.FieldName = "ProductSales";
            f.Caption = "Product Sales";
            f.Area = PivotArea.DataArea;
        });
    }).Bind(Model).GetHtml()