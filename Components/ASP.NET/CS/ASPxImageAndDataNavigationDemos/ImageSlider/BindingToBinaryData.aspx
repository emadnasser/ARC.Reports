<%@ Page Language="C#" MasterPageFile="~/Site.master" AutoEventWireup="true" CodeFile="BindingToBinaryData.aspx.cs"
    Inherits="ImageSlider_BinaryImage" %>
<asp:Content ID="Content2" ContentPlaceHolderID="ContentHolder" runat="Server">
    <div style="float: left;">
        <dx:ASPxImageSlider ID="imageSlider" runat="server" ClientInstanceName="ImageSlider"
            EnableViewState="False" EnableTheming="False" DataSourceID="ImagesDataSource" ImageContentBytesField="Picture"
            TextField="Text">
            <SettingsNavigationBar ThumbnailsModeNavigationButtonVisibility="None" />
            <SettingsAutoGeneratedImages ImageCacheFolder="~\Thumb\" />
        </dx:ASPxImageSlider>
    </div>
    <div style="float: left; margin-left: 24px;">
        <dx:ASPxRadioButtonList ID="rbFiltering" runat="server"  AutoPostBack="true">
            <Items>
                <dx:ListEditItem Text="All" Value="-1" Selected="true" />
                <dx:ListEditItem Text="Vegetables" Value="1" />
                <dx:ListEditItem Text="Fruits" Value="2" />
                <dx:ListEditItem Text="Mushrooms" Value="3" />
                <dx:ListEditItem Text="Cereal" Value="4" />
            </Items>
        </dx:ASPxRadioButtonList>
    </div>
    <ef:EntityDataSource ID="ImagesDataSource" runat="server" ContextTypeName="BinaryImagesContext" EntitySetName="BinaryImages" />
</asp:Content>
