@Html.DevExpress().GridView(settings => {
    settings.Name = "grid";
    settings.CallbackRouteValues = new { Controller = "Accessibility", Action = "ComplianceEditingPartial" };
    settings.SettingsEditing.BatchUpdateRouteValues = new { Controller = "Accessibility", Action = "ComplianceBatchEditingUpdateModel" };
    settings.SettingsEditing.UpdateRowRouteValues = new { Controller = "Accessibility", Action = "ComplianceEditingUpdateModel" }; 
    settings.Width = Unit.Percentage(100);
    settings.AccessibilityCompliant = true;
    settings.Caption = "Products";
    settings.KeyFieldName = "ProductID";
    settings.CommandColumn.Visible = !GridViewAccessibilityDemoHelper.IsBatchEditing;
    settings.CommandColumn.ShowEditButton = true;
    settings.CommandColumn.Width = Unit.Pixel(50);
    settings.Columns.Add(column => {
        column.FieldName = "ProductName";
        column.Width = Unit.Pixel(200);
        column.SettingsHeaderFilter.Mode = GridHeaderFilterMode.CheckedList;
    });

    settings.Columns.Add(column => {
        column.FieldName = "CategoryID";
        column.Caption = "Category";
        column.Width = Unit.Pixel(100);
        column.EditorProperties().ComboBox(p => {
            p.TextField = "CategoryName";
            p.ValueField = "CategoryID";
            p.ValueType = typeof(int);
            p.DataSource = NorthwindDataProvider.GetCategories();
        });
    });

    settings.Columns.Add(column => {
        column.FieldName = "QuantityPerUnit";
        column.Width = Unit.Pixel(150);
        column.SettingsHeaderFilter.Mode = GridHeaderFilterMode.CheckedList;
    });
    settings.Columns.Add(column => {
        column.FieldName = "UnitPrice";
        column.EditorProperties().SpinEdit(p => {
            p.DisplayFormatString = "c";
            p.DisplayFormatInEditMode = true;
            p.MinValue = 0;
            p.MaxValue = 1000000;
        });
        column.Width = Unit.Pixel(100);
        column.SettingsHeaderFilter.Mode = GridHeaderFilterMode.CheckedList;
    });
    
    settings.Columns.Add(column => {
        column.FieldName = "UnitsInStock";
        column.Width = Unit.Pixel(100);
    });
    
    settings.Columns.Add(column => {
        column.FieldName = "Discontinued";
        column.ColumnType = MVCxGridViewColumnType.CheckBox;
        column.Width = Unit.Pixel(100);
    });

    settings.Settings.VerticalScrollBarMode = ScrollBarMode.Visible;
    settings.Settings.ShowHeaderFilterButton = true;
    settings.Settings.VerticalScrollableHeight = 300;
    settings.SettingsEditing.Mode = GridViewAccessibilityDemoHelper.EditMode;
    settings.SettingsEditing.BatchEditSettings.EditMode = GridViewBatchEditMode.Cell;
    settings.SettingsPager.PageSize = 20;
    settings.SettingsPager.AllButton.Visible = true;
    settings.SettingsPager.FirstPageButton.Visible = true;
    settings.SettingsPager.LastPageButton.Visible = true;
    settings.SettingsPager.PageSizeItemSettings.Visible = true;
    settings.SettingsPager.PageSizeItemSettings.ShowAllItem = true;
    settings.SettingsPager.PageSizeItemSettings.Items = new string[] {"10", "20", "50"};
}).Bind(Model).GetHtml()
