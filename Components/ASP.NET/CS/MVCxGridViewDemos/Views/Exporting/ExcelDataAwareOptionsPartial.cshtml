@Html.Partial("ToolbarExport", DevExpress.Web.Demos.GridViewExportDemoHelper.DataAwareExportFormatsInfo.Keys)
@Html.DevExpress().FormLayout(settings => {
    settings.Name = "demoOptions";

    settings.Items.Add(m => m, i => {
        i.FieldName = "ExportRowType";
        i.Caption = "Export row type";

        i.NestedExtensionType = DevExpress.Web.Mvc.FormLayoutNestedExtensionItemType.ComboBox;
        var cpSettings = (DevExpress.Web.Mvc.ComboBoxSettings)i.NestedExtensionSettings;
        cpSettings.Properties.DataSource = Enum.GetValues(typeof(DevExpress.Web.GridViewExportedRowType));
        cpSettings.SelectedIndex = 0;
        cpSettings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
    });
    settings.Styles.LayoutGroup.CssClass = "optionsRootGroup";
}).GetHtml()
