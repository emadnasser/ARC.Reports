@model IEnumerable

<script type="text/javascript">
    MVCxClientGlobalEvents.ControlsInitialized.AddHandler(function(){
        ProcessColumnMoveOnClient.ValueChanged.AddHandler(OnDemoOptionChanged);
        ColumnMoveMode.ValueChanged.AddHandler(OnDemoOptionChanged);

        function OnDemoOptionChanged(){
            $("form").submit();
        };
    });
</script>

@using(Html.BeginForm()) {
    @Html.DevExpress().FormLayout(
        settings => {
            settings.Name = "options";
            settings.UseDefaultPaddings = false;
            settings.RequiredMarkDisplayMode = RequiredMarkMode.None;
            settings.Items.Add(i => i.FieldName = "ProcessColumnMoveOnClient");
            settings.Items.Add(i => i.FieldName = "ColumnMoveMode");
        }).Bind(ColumnMovingDemoHelper.Options).GetHtml()
}

<br />
@Html.Partial("ColumnMovingPartial", Model)