@Html.DevExpress().FormLayout(settings => {
    settings.Name = "demoOptions";
    settings.Theme = "Metropolis";
    settings.ShowItemCaptionColon = false;
    settings.RequiredMarkDisplayMode = RequiredMarkMode.None;
    settings.ColCount = 2;
    settings.SettingsItemCaptions.Location = LayoutItemCaptionLocation.Left;
    settings.Width = Unit.Percentage(100);
    
    settings.Items.AddGroupItem(g => {
        g.Caption = "Options";
        g.GroupBoxDecoration = GroupBoxDecoration.HeadingLine;
        g.Width = Unit.Pixel(200);
        g.Items.Add(i => {
            i.Caption = "EnableClientRender: ";
            i.NestedExtension().CheckBox(s => {
                s.Name = "EnableClientRender";
                s.Checked = ViewBag.EnableClientRender;
                s.Properties.ClientSideEvents.ValueChanged = "OnDemoOptionsChanged";
            });
        });
    });
    
    settings.Items.AddGroupItem(g => {
        g.Caption = "Test Results";
        g.GroupBoxDecoration = GroupBoxDecoration.HeadingLine;
        g.Width = Unit.Percentage(100);
        
        g.Items.Add(i => {
            i.Caption = "Command";
            i.NestedExtension().Label(s => {
                s.Name = "CommandName";
            });
        });
        
        g.Items.Add(i => {
            i.Caption = "Time taken (ms)";
            i.NestedExtension().Label(s => {
                s.Name = "Time";
                s.Text = "...";
            });
        });
    });
 }).GetHtml()