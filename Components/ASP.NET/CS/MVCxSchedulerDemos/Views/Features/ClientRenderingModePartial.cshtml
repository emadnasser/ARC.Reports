@Html.DevExpress().Scheduler(
    settings => {
        settings.Name = "scheduler";
        settings.CallbackRouteValues = new { Controller = "Features", Action = "ClientRenderingModePartial" };
        settings.EditAppointmentRouteValues = new { Controller = "Features", Action = "ClientRenderingModePartialEditAppointment" };
        settings.Width = Unit.Percentage(100);
        settings.ActiveViewType = SchedulerViewType.FullWeek;
        settings.Start = new DateTime(2014, 5, 23);
        
        settings.ClientSideEvents.BeginCallback = "OnBeginCallback";
        settings.ClientSideEvents.EndCallback = "OnEndCallback";

        settings.EnableClientRender = ViewBag.EnableClientRender;

        settings.Views.DayView.ResourcesPerPage = 3;
        settings.Views.DayView.Styles.ScrollAreaHeight = Unit.Pixel(600);
        settings.Views.WorkWeekView.ResourcesPerPage = 3;
        settings.Views.WorkWeekView.Styles.ScrollAreaHeight = Unit.Pixel(600);
        settings.Views.FullWeekView.Enabled = true;
        settings.Views.FullWeekView.ResourcesPerPage = 3;
        settings.Views.FullWeekView.Styles.ScrollAreaHeight = Unit.Pixel(600);
        settings.Views.MonthView.ResourcesPerPage = 3;
        settings.Views.TimelineView.ResourcesPerPage = 3;

        settings.GroupType = SchedulerGroupType.Resource;
        settings.ActiveViewType = SchedulerViewType.FullWeek;

        settings.Storage.EnableReminders = false;
        settings.Storage.Resources.Assign(SchedulerDemoHelper.DefaultResourceStorage);
        settings.Storage.Appointments.Assign(SchedulerDemoHelper.CustomAppointmentStorage);
    }
).Bind(Model.Appointments, Model.Resources).GetHtml()