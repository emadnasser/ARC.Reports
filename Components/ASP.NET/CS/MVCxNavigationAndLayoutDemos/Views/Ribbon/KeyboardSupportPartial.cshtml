@functions{
    T CreateButtonItem<T>(string name, string text, string iconID) where T : RibbonButtonItem {
        return CreateButtonItem<T>(name, text, RibbonItemSize.Small, iconID, "");
    }
    T CreateButtonItem<T>(string name, string text, string iconID, string accessKey) where T: RibbonButtonItem {
        return CreateButtonItem<T>(name, text, RibbonItemSize.Small, iconID, accessKey);
    }
    T CreateButtonItem<T>(string name, string text, RibbonItemSize size, string iconID, string accessKey) where T : RibbonButtonItem {
        var item = Activator.CreateInstance<T>();
        item.Name = name;
        item.Text = text;
        item.Size = size;
        item.AccessKey = accessKey;
        if(size == RibbonItemSize.Large)
            item.LargeImage.IconID = iconID;
        else
            item.SmallImage.IconID = iconID;
        return item;
    }
    RibbonGalleryItem CreateGalleryItem(string text, string iconID) {
        var galleryItem = new RibbonGalleryItem {
            Text = text,
            Value = text,
            ToolTip = text
        };
        galleryItem.Image.IconID = iconID;
        return galleryItem;
    }
}

