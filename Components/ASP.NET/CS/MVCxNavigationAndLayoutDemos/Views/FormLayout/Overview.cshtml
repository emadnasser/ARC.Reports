@model FormLayoutOverviewModel

@Html.DevExpress().FormLayout(settings => {
    settings.Name = "flOverview";
    settings.Width = Unit.Pixel(540);

    settings.Items.AddGroupItem(g => {
        g.Caption = "Employees";
        g.Items.Add(m => m.FirstName);
        g.Items.Add(m => m.LastName);
        g.Items.Add(m => m.Note, i => {
            i.NestedExtension().Memo(s => {
                s.Height = 70;
                s.Width = Unit.Percentage(100);
            });
        }); 
    });
}).GetHtml()