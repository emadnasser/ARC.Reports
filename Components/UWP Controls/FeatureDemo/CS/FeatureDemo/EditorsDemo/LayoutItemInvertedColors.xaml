<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="using:DevExpress.Core"
    xmlns:Layout="using:DevExpress.UI.Xaml.Layout">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Default">
            <SolidColorBrush x:Key="LayoutItemForegroundBrush" Color="#FF101010"/>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="LayoutItemForegroundBrush" Color="#FF505050"/>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

    <Style TargetType="Layout:LayoutItem">
        <Setter Property="Foreground" Value="{ThemeResource LayoutItemForegroundBrush}"/>
    </Style>
</ResourceDictionary>