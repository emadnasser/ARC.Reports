<Page
    x:Class="HamburgerMenuDemo.HamburgerMenuDemo_NewMailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HamburgerMenuDemo"
    xmlns:Layout="using:DevExpress.UI.Xaml.Layout"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <Style TargetType="Layout:HyperlinkNavigationButton">
            <Setter Property="Margin" Value="6,0" />
        </Style>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Hamburger Menu Demo: New Mail Page" Style="{StaticResource HamburgerMenuDemoModulePageHeaderTextStyle}" />
            <TextBlock Style="{StaticResource HamburgerMenuDemoModulePageTextStyle}" Text="The Hamburger Menu disappears when you navigate to this page because the corresponding menu item's HideMenuWhenSelected option is enabled. To leave this page, click the Back button." TextWrapping="WrapWholeWords" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>