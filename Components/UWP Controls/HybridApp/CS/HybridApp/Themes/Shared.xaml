                Margin="0,4,0,-4"
                Opacity="0.1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="12"/>
                </Grid.RowDefinitions>
                <Path x:Name="Arrow" Stretch="Fill" Fill="{ThemeResource ChartsToolTipBackgroundBrush}" Data="F1 M 461,303L 474,316L 487,303L 461,303 Z " HorizontalAlignment="Center" Height="13" Grid.Row="1" Width="26" Margin="0,-1,0,0"/>
                <Border x:Name="ContentBack" Background="{ThemeResource ChartsToolTipBackgroundBrush}"/>
            </Grid>
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Path x:Name="downArrow"
                        Visibility="{Binding Path=DownArrowVisibility}"
                        Stretch="Fill"
                        Fill="{Binding ToolTipBrush}"
                        Data="F1 M 461,303L 474,316L 487,303L 461,303 Z "
                        HorizontalAlignment="Center"
                        Grid.Row="1"
                        Grid.Column="1"
                        Height="13"
                        Width="26"
                        Margin="0,-1,0,0">
                </Path>
                <Path x:Name="leftArrow"
                        Visibility="{Binding Path=LeftArrowVisibility}"
                        Stretch="Fill"
                        Fill="{Binding ToolTipBrush}"
                        Data="F1 M 316,461L 303,474L 316,487L 316,461 Z "
                        HorizontalAlignment="Center"
                        Height="26"
                        Width="13"
                        Margin="0,0,0,-1">
                </Path>
                <Border x:Name="ContentBack1"
                    Background="{Binding ToolTipBrush}"
                    Grid.Column="1">
                    <TextBlock x:Name="Content1"
                        TextWrapping="Wrap"
                        Text="{Binding ToolTipText}"
                        Margin="20,15,20,18"
                        FontSize="14"
                        Foreground="{ThemeResource ChartSeriesTooltipForegroundBrush}"
